<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["CompanyName"] Authorisation Server</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav>
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-page="/Profile">Profile</a>
                <a asp-page="/Manage/Index">Manage</a>
                <a asp-controller="Logout" asp-action="Logout">Logout</a>
            }
            else
            {
                <a asp-page="/Register">Register</a>
                <a asp-page="/Login">Login</a>
            }
        </nav>
    </header>

    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div>
            &copy; 2021 - RazorPages
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
